{% extends '@AcMarcheBottin/layout.html.twig' %}

{% block body -%}
    <div class="card mb-3">
        <div class="card-header">
            <h3>{{ adresse }}</h3>
        </div>
        <div class="card-body">

            {% if is_granted('ROLE_BOTTIN_ADMIN') %}
                <a href="{{ path('bottin_adresse_edit', { 'id': adresse.id }) }}" class="btn btn-primary"
                   role="button"><i class="far fa-edit"></i> Editer</a>
            {% endif %}
            <a href="{{ path('bottin_adresse', { 'id': adresse.id }) }}"
               class="btn btn-primary" role="button">
                <i class="fas fa-long-arrow-alt-left"></i> Retour Ã  la liste
            </a>

            <br/><br/>
            <table class='table table-bordered table-hover'>
                <tr>
                    <th>
                        <i class="fas fa-map-marked-alt"></i> Adresse
                        <br/>
                        <a href="https://www.openstreetmap.org/#map=17/{{ adresse.latitude }}/{{ adresse.longitude }}"
                           target="_blank">
                            Carte
                        </a>
                    </th>
                    <td>
                        {{ adresse.rue }} {{ adresse.numero }} <br/>
                        {{ adresse.cp }} {{ adresse.localite }}
                    </td>
                </tr>
            </table>

            {% include '@AcMarcheBottin/map/_openstreetmap.html.twig' %}
        </div>
    </div>
{% endblock %}
