{% extends '@AcMarcheBottin/layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/acmarchebottin/dropzone/dropzone.css') }}">
{% endblock %}

{% block body -%}
    <div class="card bg-light mb-3">
        <div class="card-header">
            <h3>Images de {{ fiche }}</h3>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr':{'id': 'formdrop','class': 'dropzone2 jumbotron'}}) }}
            {{ form_errors(form) }}

            <div class="dz-message d-flex flex-column">
                <i class="fas fa-cloud-upload-alt">Charger les images</i>
            </div>

            {{ form_end(form) }}
        </div>
        <div class="card-footer">
            <a href="{{ path('bottin_fiche_show',{'id': fiche.id}) }}">
                <i class="fas fa-long-arrow-alt-left"></i> Retour Ã  la fiche
            </a>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script src="{{ asset('bundles/acmarchebottin/dropzone/dropzone.js') }}"></script>
    <script type="text/javascript">
        Dropzone.options.formdrop = {
            dictDefaultMessage: "Glissez ici vos images ou cliquez sur cette zone pour ajouter des photos",
            init: function () {
                this.on("addedfile", function (file) {
                    console.log("finished");
                });
            }
        };
    </script>
{% endblock %}
