{% extends '@AcMarcheBottin/backend/layout.html.twig' %}

{% block body -%}
    <div class="card">
        <div class="card-header">
            <h3>
                <a href="{{ bottin_url_fiche_show(fiche) }}">{{ fiche }}</a>
            </h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            {% include "@AcMarcheBottin/backend/fiche/form/_etape_"~etape~".html.twig" %}

            {% if etape > 1 %}
                <a href="{{ path('bottin_backend_fiche_edit', {'etape':  etape -1, 'uuid': token.uuid}) }}"
                   class="btn btn-primary mr-1 mb-2" type="submit"><i class="fas fa-arrow-left" aria-hidden="true"></i>
                    Précédent
                </a>
            {% endif %}
            {% if etape < 4 %}
                <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                    Suivant
                </button>
            {% else %}
                <a href="{{ bottin_url_fiche_show(fiche) }}"
                   class="btn btn-primary mr-1 mb-2"
                   type="submit"><i class="fas fa-check" aria-hidden="true"></i>
                    Terminer
                </a>
            {% endif %}

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
