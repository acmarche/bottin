{% extends '@AcMarcheBottin/backend/layout.html.twig' %}

{% block body -%}

    <div class="card mb-3">
        <div class="card-header">
            <h3>
                Sélectionnez vos secteurs d'activités
                <a href="{{ path('bottin_backend_fiche_show', { 'uuid': token.uuid }) }}">
                    {{ fiche }}
                </a>
            </h3>
        </div>
        <div class="card-body">

            {% include '@AcMarcheBottin/backend/classement/_list.html.twig' %}

            <h5 class="text-success">Ajouter un secteur</h5>
            <hr>

            <div {{ stimulus_controller('category', { categoryId: 0, url: path('bottin_admin_ajax_get_categories_for_export')}) }} >
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <button class="btn btn-warning mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                    Ajouter
                </button>
                {{ form_end(form) }}

                <div class="d-flex gap-2">
                    <ul>
                        {% for category in roots %}
                            <li class="list-group-item">
                                <button
                                        class="btn btn-sm btn-primary"
                                        data-action="category#selectCategory"
                                        data-category-target="categories"
                                        data-category-id="{{ category.id }}"
                                        data-category-level="1"
                                >
                                    {{ category }}
                                </button>
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="d-flex" data-category-target="result1"></div>
                    <div class="d-flex" data-category-target="result2"></div>
                    <div class="d-flex" data-category-target="result3"></div>
                    <div class="d-flex" data-category-target="result4"></div>
                </div>

            </div>


        </div>
    </div>

{% endblock %}
