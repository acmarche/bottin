{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block body -%}

    <div class="card bg-lig2ht mb-3">
        <div class="card-header">
            <h3>Bottin marchois</h3>
        </div>
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                {% for category in categories %}
                    <div class="col">
                        <h5 class="card-title">
                            <a href="{{ path('bottin_category_show', {'id': category.id}) }}">{{ category.name }}</a>
                        </h5>
                        <ul class="list-group">
                            {% for child in category.childNodes %}
                                <li class="list-group-item">
                                    <a href="{{ path('bottin_category_show', {'id': category.id}) }}">
                                        {{ child.name }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
