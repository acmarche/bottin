{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block title %}Me connecter{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/acmarchebottin/css/signin.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="text-center">

        <main class="form-signin">

            {% if error %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endif %}

            <form method="post" action="{{ path('app_login') }}">
                <img class="mb-4" src="{{ asset('bundles/acmarchebottin/images/logo_adl.png') }}" alt="Adl" width="150">
                <h1 class="h3 mb-3 fw-normal">Authentifiez vous</h1>

                <div class="form-floating">
                    <input type="text" value="{{ last_username }}" name="_username" class="form-control"
                           id="floatingInput" placeholder="jdupont" autocomplete="username" autofocus required>
                    <label for="floatingInput">Nom d'utilisateur</label>
                </div>
                <div class="form-floating mt-3">
                    <input type="password" name="_password" class="form-control" id="floatingPassword"
                           placeholder="Mot de passe" autocomplete="current-password" required>
                    <label for="floatingPassword">Mot de passe</label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Me connecter</button>
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
                       value="{{ csrf_token('authenticate') }}">
            </form>
        </main>
    </div>
{% endblock %}
