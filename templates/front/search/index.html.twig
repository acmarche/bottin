{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>Rechercher {% if keyword %}"{{ keyword }}"{% endif %}</h3>
        </div>
        <div class="card-body">
            {# { form(form) } #}

            <div class="input-group"
                    {{ stimulus_controller('search', {url: path('bottin_front_search_ajax')}) }}>
                <input
                        type="search"
                        name="q"
                        autocomplete="off"
                        class="form-control"
                        data-action="search#onSearchInput"/>
                <div class="search-preview" data-search-target="result"></div>
            </div>

            {% if count > 0 %}

                <h4 class="text-success">{{ count }} trouv√©(s)</h4>

                {% for hit in hits %}
                    {% set fiche = hit.data %}

                    <li class="list-group-item">
                        <a href="{{ bottin_url_fiche_show(fiche) }}">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    {% include '@AcMarcheBottin/front/fiche/_image.html.twig' %}
                                    <span class="px-1">{{ fiche.societe }}</span>
                                </div>
                                <em>{{ fiche.localite }}</em>
                            </div>
                        </a>
                    </li>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}
