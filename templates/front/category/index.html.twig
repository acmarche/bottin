{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block body -%}
    <div class="card">
        <div class="card-header">
            <h3>Les secteurs</h3>
        </div>
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                {% for category in categories %}
                    <div class="col p2-1 2mb-1">
                        <h5 class="">
                            <a href="{{ path('bottin_front_category_show', {'slug': category.slug}) }}">{{ category.name }}</a>
                        </h5><hr>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
