{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block body -%}
    <div class="card bg-lig2ht mb-3">
        <div class="card-header">
            <h3>Les secteurs</h3>
        </div>
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                {% for category in categories %}
                    <div class="col shadow-sm p-1 mb-1 bg-body rounded">
                        <h5 class="card-title">
                            <a href="{{ path('bottin_category_show', {'slug': category.slug}) }}">{{ category.name }}</a>
                        </h5>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
