<h4 class="text-success">Class√© dans</h4>
{% if classements | length > 0 %}
    {% for classement in classements %}
        {% set category = classement.category %}
        {% set paths =  category.path %}
        <nav aria-label="breadcrumb">
            <ol class='breadcrumb'>
                {% for path in paths %}
                    {% if loop.last %}
                        <li class="breadcrumb-item active" aria-current="page">
                            <a href="{{ path('bottin_front_category_show', {'slug': path.slug}) }}">
                                {{ path }}
                            </a>
                        </li>
                    {% else %}
                        <li class="breadcrumb-item" aria-current="page">
                            {{ path }}
                        </li>
                    {% endif %}
                {% endfor %}
            </ol>
        </nav>
    {% endfor %}

{% else %}
    <p class="text-warning">Aucun classement</p>
{% endif %}
