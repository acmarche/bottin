{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block title %}{{ fiche.societe }} {{ fiche.localite }} - Bottin marchois{% endblock %}

{% block body -%}
    <div class="card">
        <div class="card-header">
            <h3>{{ fiche }}</h3>
        </div>
        <div class="card-body">

            {% include '@AcMarcheBottin/admin/fiche/_actions.html.twig' %}

            <table class='table table-bordered table-hover'>
                <tr>
                    <th><i class="fas fa-map-marked-alt"></i> Adresse</th>
                    <td>
                        {% include '@AcMarcheBottin/admin/fiche/_adresse.html.twig' %}
                    </td>
                <tr>
                    <th><i class="ti ti-home-link"></i> Site web</th>
                    <td>
                        <a href="{{ fiche.website }}">{{ fiche.website }}</a>
                    </td>
                </tr>
                <tr>
                    <th><i class="ti ti-mail"></i> Email</th>
                    <td>
                        {{ fiche.email }}
                    </td>
                </tr>
                <tr>
                    <th><i class="ti ti-phone"></i> Téléphone</th>
                    <td>
                        {{ fiche.telephone }}
                    </td>
                </tr>
                <tr>
                    <th><i class="ti ti-phone"></i> Autre téléphone</th>
                    <td>
                        {{ fiche.telephoneautre }}
                    </td>
                </tr>
                <tr>
                    <th><i class="ti ti-device-landline-phone"></i> Fax</th>
                    <td>{{ fiche.fax }}</td>
                </tr>
                <tr>
                    <th><i class="ti ti-device-mobile"></i> Gsm</th>
                    <td>
                        {{ fiche.gsm }}
                    </td>
                </tr>
                <tr>
                    <th><i class="ti ti-receipt"></i> Numéro de tva</th>
                    <td>
                        {{ fiche.numeroTva }}
                    </td>
                </tr>
            </table>

            {% include '@AcMarcheBottin/front/fiche/_images.html.twig' %}
            {% include '@AcMarcheBottin/front/map/_openstreetmap.html.twig' %}
        </div>
        <div class="card-footer text-muted">
            {% include '@AcMarcheBottin/front/fiche/_classement.html.twig' %}
        </div>
    </div>
{% endblock %}
