{% extends '@AcMarcheBottin/layout.html.twig' %}

{% block main_class %}class="container-fluid pt-3"{% endblock %}

{% block body -%}


    <div class="row">
        <div class="offset-2 col-10">
            <div class="page-header">
                <h3>Rechercher une fiche</h3>
            </div>

            {% include '@AcMarcheBottin/search/_fiche.html.twig' %}
        </div>
    </div>

    {% if hits|length > 0 %}

        <div class="row">
            <div class="offset-2 col-10 mt-2">
                {{ include('@AcMarcheBottin/fiche/_suggests.html.twig') }}
                <h4 class="text-success">{{ hits.total.value }} trouvé</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                {{ include('@AcMarcheBottin/fiche/_aggregations.html.twig') }}
            </div>
            <div class="col-10">
                <table class='table table-bordered table-hover'>
                    <thead>
                    <tr>
                        <th>Societe</th>
                        <th>Localité</th>
                        <th>Score</th>
                        <th>Pmr</th>
                        <th>Midi</th>
                        <th>Centre</th>
                        <th>Comment1</th>
                        <th>Score</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for hit in hits.hits %}
                        {% set source = hit._source %}
                        {% set fiche = null %}
                        {% set category = null %}

                        {% if source.fiche is defined %}
                            {% set fiche = source.fiche %}
                        {% endif %}

                        {% if source.category is defined %}
                            {% set category = source.category %}
                        {% endif %}

                        {% if fiche %}
                            {% include '@AcMarcheBottin/fiche/_line_fiche.html.twig' %}
                        {% endif %}

                        {% if category %}
                            {% include '@AcMarcheBottin/fiche/_line_category.html.twig' %}
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    {% endif %}

{% endblock %}
