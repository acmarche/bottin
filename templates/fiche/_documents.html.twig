<h4 class="text-success">Documents</h4>
{% if fiche.documents | length > 0 %}
    <table class='table table-bordered table-hover'>
        {% for document in fiche.documents %}
            <tr>

                <td>
                    <a href="{{ path('bottin_document_show', { 'id': document.id }) }}">
                        {{ document.name }}
                    </a>
                </td>
                <td>
                    <a href="{{ vich_uploader_asset(document, 'file') }}">
                        <i class="fas fa-download"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% else %}
    <p class="text-warning">Aucun document</p>
{% endif %}
