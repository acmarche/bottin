<!doctype html>
<html lang="fr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Bottin{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/acmarchebottin/favicon.ico') }}"/>
    {% block stylesheets %}{% endblock %}

    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_script_tags('app') }}

    <link href="{{ asset('bundles/acmarchebottin/css/app.css') }}" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>
<body>
{% block header %}
    <header class="p-3 mb-3 border-bottom">
        <div class="container">

            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto text-dark text-decoration-none">
                    <i class="fas fa-store icon-rose"></i> <span class="fs-4">Bottin</span>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0" id="topmenu">
                    {% block menu %}
                        {% include '@AcMarcheBottin/front/_menu.html.twig' %}
                    {% endblock %}
                </ul>

                {{ render(url('bottin_front_search_form')) }}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="dropdown text-end">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32"
                                 class="rounded-circle">
                            {{ app.user }}
                        </a>
                        <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1" style="">
                            {# <li><a class="dropdown-item" href="#">New project...</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li> #}
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Me d√©connecter</a></li>
                        </ul>
                    </div>
                {% else %}
                    <a type="button" class="btn btn-outline-primary me-2" href="{{ path('app_login') }}">Me
                        connecter</a>
                {% endif %}

            </div>
        </div>
    </header>
{% endblock %}

<main role="main" {% block main_class %}class="container pt-3"{% endblock %}>

    {% include '@AcMarcheBottin/front/_flash_messages.html.twig' %}

    {% block notifications %}

    {% endblock %}

    {% block body %}

    {% endblock %}
</main>

{% block footer %}
    <footer class="mb-5 d-print-none">

    </footer>
{% endblock %}
{% block scripts %}{% endblock %}
{% block javascripts %}{% endblock %}

</body>
</html>
