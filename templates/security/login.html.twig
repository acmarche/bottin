{% extends '@AcMarcheBottin/layout.html.twig' %}

{% block title %}Me connecter{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/acmarchebottin/css/signin.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="text-center">

        <main class="form-signin">
            <form method="post" action="{{ path('app_login') }}">
                <img class="mb-4" src="{{ asset('bundles/acmarchebottin/images/logo_adl.jpg') }}" alt="Adl" width="72"
                     height="57">
                <h1 class="h3 mb-3 fw-normal">Authentifiez vous</h1>

                <div class="form-floating">
                    <input type="text" value="{{ last_username }}" name="username" class="form-control"
                           id="floatingInput" placeholder="jdupont">
                    <label for="floatingInput">Nom d'utilisateur</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control" id="floatingPassword"
                           placeholder="Mot de passe">
                    <label for="floatingPassword">Mot de passe</label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Me connecter</button>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
        </main>
    </div>
{% endblock %}
