{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block main_class %}class="container-fluid pt-3"{% endblock %}

{% block body -%}

    <div class="card">
        <h3 class="card-header">Rechercher une fiche</h3>

        <div class="card-body">
            {% include '@AcMarcheBottin/admin/search/_fiche.html.twig' %}
        </div>
    </div>

    {% if isSubmitted %}

        <div class="row">
            <div class="offset-2 col-10 mt-2">
                <h4 class="text-success">{{ count }} trouvé</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-3">
                {{ include('@AcMarcheBottin/admin/fiche/_aggregations.html.twig') }}
            </div>
            <div class="col-9">
                <table class='table table-bordered table-hover'>
                    <thead>
                    <tr>
                        <th>Societe</th>
                        <th>Localité</th>
                        <th>Téléphone</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for fiche in hits %}
                        <tr>
                            <td>
                                <a href="{{ bottin_url_fiche_show(fiche) }}"
                                   title="Détail de la fiche">
                                    {{ fiche.societe }}
                                </a>
                            </td>
                            <td>
                                {{ fiche.localite }}
                            </td>
                            <td>
                                {{ fiche.telephone }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

{% endblock %}
