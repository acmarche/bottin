{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block body -%}

    <div class="card">
        <div class="card-header">
            <h3>Rechercher une fiche</h3>
        </div>
        <div class="card-body">
                <span class="text-muted">
                    <a href="{{ path('bottin_admin_fiche_search_advanced') }}">Recherche avancé</a>
                </span>

            {% include '@AcMarcheBottin/admin/search/_fiche.html.twig' %}

            {% if isSubmitted %}

                <h4 class="text-success">{{ count }} trouvé(s)</h4>

                <table class='table table-bordered table-hover'>
                    <thead>
                    <tr>
                        <th>Societe</th>
                        <th>Rue</th>
                        <th>Localité</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for fiche in fiches %}
                        <tr>
                            <td>
                                <a href="{{ bottin_url_fiche_show(fiche) }}"
                                   title="Détail de la fiche">
                                    {{ fiche.societe }}
                                </a>
                            </td>
                            <td>
                                {{ fiche.rue }}
                            </td>
                            <td>
                                {{ fiche.localite }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            {% endif %}
        </div>
    </div>

{% endblock %}
