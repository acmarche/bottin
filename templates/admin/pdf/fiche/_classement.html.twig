<h4 class="text-success">Classements</h4>
<hr/>
{% if fiche.classementsFull | length > 0 %}
    <table class='table table-bordered table-hover'>
        {% for classement in fiche.classementsFull %}
            {% set category = classement.category %}
            {% set paths =  category.path %}
            <tr>
                <td>
                    {% for path in paths %}
                        {% if loop.last or loop.first %}
                            {{ path }}
                        {% else %}
                            => {{ path }}
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
    </table>
{% else %}
    <p class="text-warning">Aucun classement</p>
{% endif %}
