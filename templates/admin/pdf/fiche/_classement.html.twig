<h7>Classements</h7>
{% if fiche.classementsFull | length > 0 %}
    <table class='table table-bordered table-hover'>
        {% for classement in fiche.classementsFull %}
            {% set category = classement.category %}
            {% set paths =  category.path %}
            <tr>
                <td>
                    <ol class='breadcrumb'>
                        {% for path in paths %}
                            {% if loop.last %}
                                <li class="active">{{ path }}</li>
                                {% else %}
                                <li>
                                    {{ path }}
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ol>
                </td>
            </tr>
        {% endfor %}
    </table>
{% else %}
    <p class="text-warning">Aucun classement</p>
{% endif %}
