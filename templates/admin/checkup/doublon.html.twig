{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h3>Fiches en double</h3></div>
        <div class="card-body">
            <table class="table table-bordered">
                {% for fiche in fiches %}
                    {% if fiche.lignes > 1 %}
                        <tr>
                            <td>
                                {{ fiche.societe }}
                            </td>
                            <td>
                                {{ fiche.lignes }}
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}

