{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block body -%}

    <div class="card mb-3">
        <div class="card-header">
            <h3>Classements pour
                <a href="{{ path('bottin_admin_fiche_show', { 'id': fiche.id }) }}">
                    {{ fiche }}
                </a>
            </h3>
        </div>
        <div class="card-body">

            {% include '@AcMarcheBottin/admin/classement/_list.html.twig' %}

            {{ form_start(form) }}
            {{ form_errors(form) }}

            <h5 class="text-success">Ajout par recherche</h5>
            <hr>
            {{ form_row(form.name) }}

            <h5 class="text-success">Ajout par navigation</h5>
            <hr>

            <div class="d-flex gap-2">
                <div class="">
                    <label>
                        <select name="category" size="10" class="form-select my-1 mr-sm-2 category-root"
                                onchange="getCategories(this, '0')">
                            {% for root in roots %}
                                <option value="{{ root.id }}">{{ root }}</option>
                            {% endfor %}
                        </select>
                    </label>
                </div>

                <div class="">
                    <div id="ajaxsuccess-1">

                    </div>
                </div>
                <div class="">
                    <div id="ajaxsuccess-2">

                    </div>
                </div>

                <div class="">
                    <div id="ajaxsuccess-3">

                    </div>
                </div>
            </div>

            <br clear="all" class="mb-2"/>

            {{ form_row(form.principal) }}

            <div class="btn-group">
                <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                    Ajouter
                </button>
            </div>

            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}

