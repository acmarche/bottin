{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block body -%}
    <div class="card">
        <div class="card-header">
            <h3>{{ tag }}</h3>
        </div>
        <div class="card-body">

            {% include '@AcMarcheBottin/admin/tag/_actions.html.twig' %}

            {% if tag.description %}
                <p class="text-muted mt-3">{{ tag.description }}</p>
            {% endif %}
            <br/>
            {% set count = fiches | length %}

            <h3 class="text-success">{% if  count > 0 %} {{ count }} {% endif %}Fiches avec ce tag</h3>
            {% if  count > 0 %}

                <table class='table table-bordered table-hover'>
                    <thead>
                    <tr>
                        <th>Societe</th>
                        <th>Adresse</th>
                        <th>Téléphone</th>
                        <th>Email</th>
                        <th>Nom</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for fiche in fiches %}
                        <tr>
                            <td>
                                <a href="{{ bottin_url_fiche_show(fiche) }}"
                                   title="Détail de la fiche">{{ fiche.societe }}</a>
                            </td>
                            <td>{{ fiche.rue }}</td>
                            <td>{{ fiche.telephone }}</td>
                            <td>{{ fiche.email }}</td>
                            <td>{{ fiche.nom }} {{ fiche.prenom }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="text-info">Aucune</p>
            {% endif %}
        </div>

        {% include '@AcMarcheBottin/admin/tag/_delete_modal.html.twig' %}
    </div>
{% endblock %}
