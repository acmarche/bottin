{% if category.getChildNodes | length > 0 %}
    <br/>
    <div class='row'>
        <div class='col-md-6'>
            <ul class='list-group'>
                {% for child in category.getChildNodes %}
                <li class="list-group-item d-flex justify-content-between">
                    <a href="{{ path('bottin_admin_category_show', { 'id': child.id }) }}">{{ child }}</a>
                    <div>
                        {% if child.mobile %}
                            <img class="float-2end" src="{{ asset('bundles/acmarchebottin/images/mobile.png') }}"
                                 alt='mobile' title="Visible sur l'appli mobile"/>
                        {% endif %}
                        {% if child.logo %}
                            <img height="32px" class="float-2end" src="{{ vich_uploader_asset(child, 'logoFile') }}"
                                 alt="{{ child.id }}"/>
                        {% endif %}
                    </div>
                </li>
                {% if (loop.index) == loop.length // 2 %}
            </ul>
        </div>
        <div class='col-md-6'>
            <ul class='list-group'>
                {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
{% endif %}
