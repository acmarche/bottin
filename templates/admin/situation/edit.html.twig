{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block body -%}

    <div class="card">
        <div class="card-header">
            <h3>{{ situation }}</h3>
        </div>
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}

            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="ti ti-device-floppy" aria-hidden="true"></i>
                Sauvegarder
            </button>

            {{ form_end(form) }}

        </div>
        <div class="card-footer">
            <a href="{{ path('bottin_admin_situation') }}">
                <i class="ti ti-arrow-back"></i> Annuler
            </a>

        </div>
    </div>

{% endblock %}
