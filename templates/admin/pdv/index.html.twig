{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>Liste des points de vente</h3>
        </div>
        <div class="card-body">
            <a href="{{ path('bottin_admin_pdv_new') }}" class="btn btn-primary" role="button"><i
                        class="ti ti-pencil-plus"></i> Ajouter</a>
            <br/><br/>

            <table class='table table-bordered table-hover'>
                <thead>
                <tr>
                    <th>Intitule</th>
                    <th>Fiches</th>
                </tr>
                </thead>
                <tbody>
                {% for pdv in pdvs %}
                    <tr>
                        <td>
                            <a href="{{ path('bottin_admin_pdv_show', { 'id': pdv.id }) }}">
                                {{ pdv.intitule }}
                            </a>
                        </td>
                        <td>{{ pdv.fiches | length }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
