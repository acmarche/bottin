{% extends '@AcMarcheBottin/front/layout.html.twig' %}

{% block body -%}

    <div class="card">
        <div class="card-header">
            <h3>Publipostage par mail</h3>
            <span class="text-muted">({{ fiches|length }} fiches)</span>
        </div>
        <div class="card-body">

            <div class="alert alert-info">
                Publipostage par email avec un lien pour mettre à jour sa fiche sans authentification
                <br/>
                Insérez {urltoken} si vous voulez mettre l'url permettant de modifier sa fiche
            </div>

            {% if noEmails|length > 0 %}
                <div class="alert alert-danger">
                    <p>Attention les fiches ci-dessous n'ont pas d'email</p>
                    <ul class="list-group-item">
                        {% for fiche in noEmails %}
                            <li class="list-group-item">
                                <a href="{{ bottin_url_fiche_show(fiche) }}">{{ fiche }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                Envoyer
            </button>

            {{ form_end(form) }}

        </div>
        <div class="card-footer">
            <a href="{{ path('bottin_admin_publipostage_index') }}">Annuler</a>
        </div>
    </div>

{% endblock %}
